<svg width="800" height="400" viewBox="0 0 800 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="streamingBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#141e30;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#243b55;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="screenGlow" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:0.8" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="400" fill="url(#streamingBg)"/>
  
  <!-- Main screen -->
  <rect x="200" y="80" width="400" height="240" rx="15" fill="#000" stroke="#333" stroke-width="2"/>
  <rect x="210" y="90" width="380" height="220" rx="10" fill="url(#streamingBg)"/>
  
  <!-- Screen content - video thumbnails -->
  <rect x="220" y="100" width="100" height="60" rx="5" fill="#667eea" opacity="0.8"/>
  <rect x="340" y="100" width="100" height="60" rx="5" fill="#764ba2" opacity="0.8"/>
  <rect x="460" y="100" width="100" height="60" rx="5" fill="#f093fb" opacity="0.8"/>
  
  <rect x="220" y="180" width="100" height="60" rx="5" fill="#4facfe" opacity="0.8"/>
  <rect x="340" y="180" width="100" height="60" rx="5" fill="#43e97b" opacity="0.8"/>
  <rect x="460" y="180" width="100" height="60" rx="5" fill="#fa709a" opacity="0.8"/>
  
  <!-- Play buttons on thumbnails -->
  <polygon points="260,125 260,135 270,130" fill="#fff" opacity="0.9"/>
  <polygon points="380,125 380,135 390,130" fill="#fff" opacity="0.9"/>
  <polygon points="500,125 500,135 510,130" fill="#fff" opacity="0.9"/>
  
  <polygon points="260,205 260,215 270,210" fill="#fff" opacity="0.9"/>
  <polygon points="380,205 380,215 390,210" fill="#fff" opacity="0.9"/>
  <polygon points="500,205 500,215 510,210" fill="#fff" opacity="0.9"/>
  
  <!-- Navigation bar -->
  <rect x="220" y="260" width="360" height="30" fill="#1a1a2e" opacity="0.8"/>
  <circle cx="240" cy="275" r="5" fill="#667eea"/>
  <circle cx="260" cy="275" r="5" fill="#333"/>
  <circle cx="280" cy="275" r="5" fill="#333"/>
  <circle cx="300" cy="275" r="5" fill="#333"/>
  
  <!-- Streaming devices -->
  <!-- Laptop -->
  <g transform="translate(50, 200)">
    <rect x="0" y="20" width="80" height="50" rx="3" fill="#333" stroke="#555" stroke-width="1"/>
    <rect x="5" y="25" width="70" height="40" fill="#000"/>
    <rect x="30" y="70" width="20" height="3" fill="#333"/>
    <ellipse cx="40" cy="75" rx="25" ry="3" fill="#333"/>
  </g>
  
  <!-- Tablet -->
  <g transform="translate(650, 150)">
    <rect x="0" y="0" width="60" height="90" rx="8" fill="#333" stroke="#555" stroke-width="1"/>
    <rect x="5" y="10" width="50" height="70" fill="#000"/>
    <circle cx="30" cy="85" r="3" fill="#555"/>
  </g>
  
  <!-- Phone -->
  <g transform="translate(680, 280)">
    <rect x="0" y="0" width="35" height="60" rx="8" fill="#333" stroke="#555" stroke-width="1"/>
    <rect x="3" y="8" width="29" height="44" fill="#000"/>
    <circle cx="17.5" cy="55" r="2" fill="#555"/>
  </g>
  
  <!-- Streaming waves/signals -->
  <g opacity="0.6">
    <path d="M150 180 Q200 160, 250 180" stroke="#4facfe" stroke-width="2" fill="none"/>
    <path d="M150 190 Q200 170, 250 190" stroke="#4facfe" stroke-width="2" fill="none"/>
    <path d="M150 200 Q200 180, 250 200" stroke="#4facfe" stroke-width="2" fill="none"/>
    
    <path d="M550 180 Q600 160, 650 180" stroke="#4facfe" stroke-width="2" fill="none"/>
    <path d="M550 190 Q600 170, 650 190" stroke="#4facfe" stroke-width="2" fill="none"/>
    <path d="M550 200 Q600 180, 650 200" stroke="#4facfe" stroke-width="2" fill="none"/>
  </g>
  
  <!-- WiFi symbol -->
  <g transform="translate(370, 40)">
    <path d="M30 20 Q45 5, 60 20" stroke="#4facfe" stroke-width="3" fill="none" opacity="0.8"/>
    <path d="M35 25 Q45 15, 55 25" stroke="#4facfe" stroke-width="3" fill="none" opacity="0.8"/>
    <path d="M40 30 Q45 25, 50 30" stroke="#4facfe" stroke-width="3" fill="none" opacity="0.8"/>
    <circle cx="45" cy="35" r="2" fill="#4facfe" opacity="0.8"/>
  </g>
  
  <!-- Title -->
  <text x="400" y="370" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="24" font-weight="bold" opacity="0.9">
    Streaming Platform
  </text>
</svg>