<svg width="800" height="400" viewBox="0 0 800 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="batteryGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2ecc71;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#27ae60;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="energyGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f1c40f;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f39c12;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="backgroundGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#34495e;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="glowGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#3498db;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#3498db;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="400" fill="url(#backgroundGradient)"/>
  
  <!-- Circuit board pattern -->
  <g opacity="0.1">
    <line x1="0" y1="50" x2="800" y2="50" stroke="#3498db" stroke-width="1"/>
    <line x1="0" y1="150" x2="800" y2="150" stroke="#3498db" stroke-width="1"/>
    <line x1="0" y1="250" x2="800" y2="250" stroke="#3498db" stroke-width="1"/>
    <line x1="0" y1="350" x2="800" y2="350" stroke="#3498db" stroke-width="1"/>
    <line x1="100" y1="0" x2="100" y2="400" stroke="#3498db" stroke-width="1"/>
    <line x1="300" y1="0" x2="300" y2="400" stroke="#3498db" stroke-width="1"/>
    <line x1="500" y1="0" x2="500" y2="400" stroke="#3498db" stroke-width="1"/>
    <line x1="700" y1="0" x2="700" y2="400" stroke="#3498db" stroke-width="1"/>
    
    <!-- Circuit nodes -->
    <circle cx="100" cy="50" r="3" fill="#3498db"/>
    <circle cx="300" cy="150" r="3" fill="#3498db"/>
    <circle cx="500" cy="250" r="3" fill="#3498db"/>
    <circle cx="700" cy="350" r="3" fill="#3498db"/>
  </g>
  
  <!-- Main battery -->
  <g transform="translate(300, 150)">
    <!-- Battery body -->
    <rect x="0" y="0" width="200" height="100" rx="10" ry="10" fill="url(#batteryGradient)" stroke="#1e8449" stroke-width="3"/>
    
    <!-- Battery terminal -->
    <rect x="200" y="35" width="20" height="30" rx="5" ry="5" fill="#95a5a6"/>
    
    <!-- Battery charge level -->
    <rect x="10" y="10" width="160" height="80" rx="5" ry="5" fill="url(#energyGradient)" opacity="0.8"/>
    
    <!-- Charge indicator segments -->
    <rect x="15" y="15" width="30" height="70" fill="#2ecc71" opacity="0.9"/>
    <rect x="50" y="15" width="30" height="70" fill="#2ecc71" opacity="0.9"/>
    <rect x="85" y="15" width="30" height="70" fill="#2ecc71" opacity="0.9"/>
    <rect x="120" y="15" width="30" height="70" fill="#f1c40f" opacity="0.9"/>
    <rect x="155" y="15" width="10" height="70" fill="#e74c3c" opacity="0.6"/>
    
    <!-- Battery percentage -->
    <text x="100" y="55" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="20" font-weight="bold">85%</text>
    
    <!-- Energy glow -->
    <circle cx="100" cy="50" r="80" fill="url(#glowGradient)" opacity="0.3"/>
  </g>
  
  <!-- Smaller batteries -->
  <g transform="translate(50, 200)">
    <!-- Battery 1 -->
    <rect x="0" y="0" width="60" height="30" rx="5" ry="5" fill="#3498db" stroke="#2980b9" stroke-width="2"/>
    <rect x="60" y="10" width="8" height="10" rx="2" ry="2" fill="#95a5a6"/>
    <rect x="5" y="5" width="45" height="20" fill="#2ecc71" opacity="0.8"/>
    
    <!-- Battery 2 -->
    <rect x="0" y="40" width="60" height="30" rx="5" ry="5" fill="#9b59b6" stroke="#8e44ad" stroke-width="2"/>
    <rect x="60" y="50" width="8" height="10" rx="2" ry="2" fill="#95a5a6"/>
    <rect x="5" y="45" width="35" height="20" fill="#e74c3c" opacity="0.8"/>
    
    <!-- Battery 3 -->
    <rect x="0" y="80" width="60" height="30" rx="5" ry="5" fill="#e67e22" stroke="#d35400" stroke-width="2"/>
    <rect x="60" y="90" width="8" height="10" rx="2" ry="2" fill="#95a5a6"/>
    <rect x="5" y="85" width="50" height="20" fill="#f1c40f" opacity="0.8"/>
  </g>
  
  <!-- Electric car -->
  <g transform="translate(550, 280)">
    <!-- Car body -->
    <path d="M0 30 L20 30 L25 20 L60 20 L65 30 L100 30 L100 50 L0 50 Z" fill="#34495e"/>
    <path d="M20 20 L25 10 L55 10 L60 20" fill="#2c3e50"/>
    
    <!-- Windows -->
    <rect x="28" y="12" width="24" height="8" fill="#87ceeb" opacity="0.7"/>
    
    <!-- Wheels -->
    <circle cx="20" cy="55" r="8" fill="#2c3e50"/>
    <circle cx="80" cy="55" r="8" fill="#2c3e50"/>
    <circle cx="20" cy="55" r="5" fill="#95a5a6"/>
    <circle cx="80" cy="55" r="5" fill="#95a5a6"/>
    
    <!-- Charging port -->
    <rect x="85" y="25" width="8" height="5" fill="#e74c3c"/>
    
    <!-- Charging cable -->
    <path d="M93 27 Q110 20, 120 30" stroke="#e74c3c" stroke-width="3" fill="none"/>
    
    <!-- Electric symbols -->
    <text x="50" y="45" text-anchor="middle" fill="#f1c40f" font-family="Arial, sans-serif" font-size="12" font-weight="bold">⚡</text>
  </g>
  
  <!-- Molecular structure -->
  <g transform="translate(100, 50)" opacity="0.7">
    <!-- Lithium atoms -->
    <circle cx="0" cy="0" r="8" fill="#ff6b6b"/>
    <circle cx="40" cy="20" r="8" fill="#ff6b6b"/>
    <circle cx="80" cy="0" r="8" fill="#ff6b6b"/>
    
    <!-- Ion atoms -->
    <circle cx="20" cy="40" r="6" fill="#4ecdc4"/>
    <circle cx="60" cy="40" r="6" fill="#4ecdc4"/>
    
    <!-- Bonds -->
    <line x1="8" y1="8" x2="32" y2="28" stroke="#95a5a6" stroke-width="2"/>
    <line x1="48" y1="28" x2="72" y2="8" stroke="#95a5a6" stroke-width="2"/>
    <line x1="14" y1="32" x2="26" y2="34" stroke="#95a5a6" stroke-width="2"/>
    <line x1="54" y1="34" x2="66" y2="32" stroke="#95a5a6" stroke-width="2"/>
    
    <!-- Labels -->
    <text x="0" y="-15" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="10">Li+</text>
    <text x="40" y="5" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="10">Li+</text>
    <text x="80" y="-15" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="10">Li+</text>
    <text x="20" y="55" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="8">Ion</text>
    <text x="60" y="55" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="8">Ion</text>
  </g>
  
  <!-- Energy flow arrows -->
  <g opacity="0.8">
    <path d="M250 200 Q270 180, 290 200" stroke="#f1c40f" stroke-width="4" fill="none"/>
    <polygon points="290,200 285,195 285,205" fill="#f1c40f"/>
    
    <path d="M520 200 Q540 180, 560 200" stroke="#f1c40f" stroke-width="4" fill="none"/>
    <polygon points="560,200 555,195 555,205" fill="#f1c40f"/>
    
    <!-- Energy symbols -->
    <text x="270" y="175" text-anchor="middle" fill="#f1c40f" font-family="Arial, sans-serif" font-size="16">⚡</text>
    <text x="540" y="175" text-anchor="middle" fill="#f1c40f" font-family="Arial, sans-serif" font-size="16">⚡</text>
  </g>
  
  <!-- Performance metrics -->
  <g transform="translate(600, 50)" opacity="0.9">
    <rect x="0" y="0" width="150" height="80" fill="#2c3e50" stroke="#3498db" stroke-width="2" rx="5"/>
    <text x="75" y="20" text-anchor="middle" fill="#3498db" font-family="Arial, sans-serif" font-size="12" font-weight="bold">Performance</text>
    <text x="10" y="35" fill="#2ecc71" font-family="Arial, sans-serif" font-size="10">Capacity: 100kWh</text>
    <text x="10" y="50" fill="#f1c40f" font-family="Arial, sans-serif" font-size="10">Range: 500km</text>
    <text x="10" y="65" fill="#e74c3c" font-family="Arial, sans-serif" font-size="10">Charge: 15min</text>
  </g>
  
  <!-- Title -->
  <text x="400" y="30" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="24" font-weight="bold" opacity="0.9">
    Next-Gen Battery Technology
  </text>
</svg>