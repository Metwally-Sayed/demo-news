<svg width="800" height="400" viewBox="0 0 800 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#87ceeb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4682b4;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="earthGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#228b22;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#006400;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="400" fill="url(#skyGradient)"/>
  
  <!-- Earth/Globe -->
  <circle cx="400" cy="200" r="120" fill="url(#earthGradient)" opacity="0.8"/>
  
  <!-- Continents -->
  <path d="M350 150 Q380 140, 420 160 Q450 180, 430 210 Q400 230, 370 220 Q340 200, 350 150" fill="#2e8b57" opacity="0.9"/>
  <path d="M420 120 Q450 110, 480 130 Q470 160, 440 150 Q420 140, 420 120" fill="#2e8b57" opacity="0.9"/>
  <path d="M320 240 Q350 230, 380 250 Q370 280, 340 270 Q320 260, 320 240" fill="#2e8b57" opacity="0.9"/>
  
  <!-- Atmosphere glow -->
  <circle cx="400" cy="200" r="125" fill="none" stroke="#87ceeb" stroke-width="3" opacity="0.6"/>
  <circle cx="400" cy="200" r="130" fill="none" stroke="#87ceeb" stroke-width="2" opacity="0.4"/>
  
  <!-- Conference building/podium -->
  <g transform="translate(150, 300)">
    <rect x="0" y="0" width="100" height="60" fill="#2c3e50"/>
    <rect x="10" y="10" width="80" height="40" fill="#34495e"/>
    <polygon points="0,0 50,-20 100,0" fill="#1a252f"/>
    
    <!-- Flags -->
    <rect x="20" y="-30" width="2" height="30" fill="#8b4513"/>
    <rect x="22" y="-30" width="15" height="10" fill="#ff0000"/>
    <rect x="50" y="-35" width="2" height="35" fill="#8b4513"/>
    <rect x="52" y="-35" width="15" height="10" fill="#0066cc"/>
    <rect x="80" y="-25" width="2" height="25" fill="#8b4513"/>
    <rect x="82" y="-25" width="15" height="10" fill="#009900"/>
  </g>
  
  <!-- Wind turbines -->
  <g transform="translate(600, 250)">
    <!-- Turbine 1 -->
    <rect x="0" y="0" width="3" height="80" fill="#ddd"/>
    <circle cx="1.5" cy="0" r="2" fill="#333"/>
    <line x1="1.5" y1="0" x2="1.5" y2="-20" stroke="#fff" stroke-width="2"/>
    <line x1="1.5" y1="0" x2="18" y2="-10" stroke="#fff" stroke-width="2"/>
    <line x1="1.5" y1="0" x2="18" y2="10" stroke="#fff" stroke-width="2"/>
    
    <!-- Turbine 2 -->
    <rect x="40" y="10" width="3" height="70" fill="#ddd"/>
    <circle cx="41.5" cy="10" r="2" fill="#333"/>
    <line x1="41.5" y1="10" x2="41.5" y2="-10" stroke="#fff" stroke-width="2"/>
    <line x1="41.5" y1="10" x2="58" y2="0" stroke="#fff" stroke-width="2"/>
    <line x1="41.5" y1="10" x2="58" y2="20" stroke="#fff" stroke-width="2"/>
  </g>
  
  <!-- Solar panels -->
  <g transform="translate(50, 320)">
    <rect x="0" y="0" width="60" height="30" fill="#1a5490" stroke="#2563eb" stroke-width="1"/>
    <rect x="70" y="5" width="60" height="30" fill="#1a5490" stroke="#2563eb" stroke-width="1"/>
    
    <!-- Panel grid lines -->
    <line x1="20" y1="0" x2="20" y2="30" stroke="#2563eb" stroke-width="1"/>
    <line x1="40" y1="0" x2="40" y2="30" stroke="#2563eb" stroke-width="1"/>
    <line x1="90" y1="5" x2="90" y2="35" stroke="#2563eb" stroke-width="1"/>
    <line x1="110" y1="5" x2="110" y2="35" stroke="#2563eb" stroke-width="1"/>
  </g>
  
  <!-- Trees/Forest -->
  <g opacity="0.8">
    <!-- Tree 1 -->
    <rect x="100" y="350" width="4" height="20" fill="#8b4513"/>
    <circle cx="102" cy="350" r="12" fill="#228b22"/>
    
    <!-- Tree 2 -->
    <rect x="120" y="345" width="4" height="25" fill="#8b4513"/>
    <circle cx="122" cy="345" r="15" fill="#228b22"/>
    
    <!-- Tree 3 -->
    <rect x="700" y="340" width="4" height="30" fill="#8b4513"/>
    <circle cx="702" cy="340" r="18" fill="#228b22"/>
    
    <!-- Tree 4 -->
    <rect x="720" y="350" width="4" height="20" fill="#8b4513"/>
    <circle cx="722" cy="350" r="12" fill="#228b22"/>
  </g>
  
  <!-- CO2 reduction arrows -->
  <g opacity="0.7">
    <path d="M300 100 Q320 80, 340 100" stroke="#ff4444" stroke-width="3" fill="none"/>
    <path d="M340 100 L335 95 M340 100 L335 105" stroke="#ff4444" stroke-width="3"/>
    <text x="320" y="75" text-anchor="middle" fill="#ff4444" font-family="Arial, sans-serif" font-size="12" font-weight="bold">CO₂</text>
    
    <path d="M460 100 Q480 80, 500 100" stroke="#00aa00" stroke-width="3" fill="none"/>
    <path d="M460 100 L465 95 M460 100 L465 105" stroke="#00aa00" stroke-width="3"/>
    <text x="480" y="75" text-anchor="middle" fill="#00aa00" font-family="Arial, sans-serif" font-size="12" font-weight="bold">O₂</text>
  </g>
  
  <!-- Agreement handshake -->
  <g transform="translate(350, 50)">
    <path d="M0 20 Q10 10, 20 15 Q30 20, 40 15 Q50 10, 60 20" stroke="#ffd700" stroke-width="4" fill="none"/>
    <circle cx="30" cy="15" r="8" fill="#ffd700" opacity="0.3"/>
  </g>
  
  <!-- Title -->
  <text x="400" y="30" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="24" font-weight="bold" opacity="0.9">
    Climate Summit Agreement
  </text>
</svg>