<svg width="800" height="400" viewBox="0 0 800 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="nightGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#34495e;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="carpetGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e74c3c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#c0392b;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="screenGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ecf0f1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#bdc3c7;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="spotlightGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#f1c40f;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#f1c40f;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Night background -->
  <rect width="800" height="400" fill="url(#nightGradient)"/>
  
  <!-- Stars -->
  <g opacity="0.8">
    <circle cx="100" cy="50" r="1" fill="#fff"/>
    <circle cx="200" cy="30" r="1" fill="#fff"/>
    <circle cx="350" cy="40" r="1" fill="#fff"/>
    <circle cx="500" cy="25" r="1" fill="#fff"/>
    <circle cx="650" cy="35" r="1" fill="#fff"/>
    <circle cx="750" cy="45" r="1" fill="#fff"/>
    <circle cx="80" cy="80" r="1" fill="#fff"/>
    <circle cx="300" cy="70" r="1" fill="#fff"/>
    <circle cx="600" cy="60" r="1" fill="#fff"/>
  </g>
  
  <!-- Theater building -->
  <g transform="translate(250, 200)">
    <!-- Main building -->
    <rect x="0" y="0" width="300" height="150" fill="#34495e"/>
    <rect x="10" y="10" width="280" height="130" fill="#2c3e50"/>
    
    <!-- Columns -->
    <rect x="30" y="20" width="15" height="120" fill="#95a5a6"/>
    <rect x="70" y="20" width="15" height="120" fill="#95a5a6"/>
    <rect x="110" y="20" width="15" height="120" fill="#95a5a6"/>
    <rect x="150" y="20" width="15" height="120" fill="#95a5a6"/>
    <rect x="190" y="20" width="15" height="120" fill="#95a5a6"/>
    <rect x="230" y="20" width="15" height="120" fill="#95a5a6"/>
    <rect x="270" y="20" width="15" height="120" fill="#95a5a6"/>
    
    <!-- Entrance -->
    <rect x="120" y="100" width="60" height="50" fill="#1a252f"/>
    <rect x="130" y="110" width="40" height="40" fill="#2c3e50"/>
    
    <!-- Theater sign -->
    <rect x="50" y="40" width="200" height="30" fill="#e74c3c"/>
    <text x="150" y="58" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="16" font-weight="bold">FILM FESTIVAL</text>
    
    <!-- Marquee lights -->
    <circle cx="40" cy="55" r="3" fill="#f1c40f"/>
    <circle cx="260" cy="55" r="3" fill="#f1c40f"/>
    <circle cx="40" cy="45" r="3" fill="#f1c40f"/>
    <circle cx="260" cy="45" r="3" fill="#f1c40f"/>
    <circle cx="40" cy="65" r="3" fill="#f1c40f"/>
    <circle cx="260" cy="65" r="3" fill="#f1c40f"/>
  </g>
  
  <!-- Red carpet -->
  <rect x="300" y="350" width="200" height="50" fill="url(#carpetGradient)"/>
  
  <!-- Rope barriers -->
  <g transform="translate(250, 340)">
    <!-- Posts -->
    <rect x="0" y="0" width="4" height="20" fill="#8b4513"/>
    <rect x="50" y="0" width="4" height="20" fill="#8b4513"/>
    <rect x="100" y="0" width="4" height="20" fill="#8b4513"/>
    <rect x="150" y="0" width="4" height="20" fill="#8b4513"/>
    <rect x="200" y="0" width="4" height="20" fill="#8b4513"/>
    <rect x="250" y="0" width="4" height="20" fill="#8b4513"/>
    <rect x="300" y="0" width="4" height="20" fill="#8b4513"/>
    
    <!-- Ropes -->
    <path d="M2 10 Q25 5, 52 10" stroke="#8b4513" stroke-width="3" fill="none"/>
    <path d="M52 10 Q75 5, 102 10" stroke="#8b4513" stroke-width="3" fill="none"/>
    <path d="M102 10 Q125 5, 152 10" stroke="#8b4513" stroke-width="3" fill="none"/>
    <path d="M152 10 Q175 5, 202 10" stroke="#8b4513" stroke-width="3" fill="none"/>
    <path d="M202 10 Q225 5, 252 10" stroke="#8b4513" stroke-width="3" fill="none"/>
    <path d="M252 10 Q275 5, 302 10" stroke="#8b4513" stroke-width="3" fill="none"/>
  </g>
  
  <!-- Celebrities/Attendees -->
  <g transform="translate(350, 300)">
    <!-- Celebrity 1 (woman in dress) -->
    <circle cx="0" cy="0" r="8" fill="#f4d1ae"/>
    <path d="M-8 8 L8 8 L12 40 L-12 40 Z" fill="#e74c3c"/>
    <rect x="-2" y="40" width="4" height="15" fill="#f4d1ae"/>
    <!-- Hair -->
    <path d="M-8 -5 Q0 -12, 8 -5 Q0 -8, -8 -5" fill="#8b4513"/>
    
    <!-- Celebrity 2 (man in tuxedo) -->
    <circle cx="30" cy="0" r="8" fill="#f4d1ae"/>
    <rect x="25" y="8" width="10" height="20" fill="#2c3e50"/>
    <rect x="27" y="10" width="6" height="16" fill="#fff"/>
    <rect x="28" y="12" width="4" height="2" fill="#e74c3c"/>
    <rect x="27" y="28" width="6" height="15" fill="#2c3e50"/>
    <rect x="28" y="43" width="4" height="12" fill="#f4d1ae"/>
    <!-- Hair -->
    <path d="M22 -5 Q30 -10, 38 -5" fill="#2c3e50"/>
    
    <!-- Celebrity 3 (woman in gown) -->
    <circle cx="60" cy="0" r="8" fill="#d4a574"/>
    <path d="M52 8 L68 8 L72 40 L48 40 Z" fill="#9b59b6"/>
    <rect x="58" y="40" width="4" height="15" fill="#d4a574"/>
    <!-- Hair -->
    <path d="M52 -3 Q60 -8, 68 -3 Q60 -6, 52 -3" fill="#f39c12"/>
    
    <!-- Celebrity 4 (man in suit) -->
    <circle cx="90" cy="0" r="8" fill="#c19a6b"/>
    <rect x="85" y="8" width="10" height="20" fill="#34495e"/>
    <rect x="87" y="10" width="6" height="16" fill="#3498db"/>
    <rect x="88" y="12" width="4" height="2" fill="#f1c40f"/>
    <rect x="87" y="28" width="6" height="15" fill="#34495e"/>
    <rect x="88" y="43" width="4" height="12" fill="#c19a6b"/>
    <!-- Hair -->
    <path d="M82 -5 Q90 -10, 98 -5" fill="#2c3e50"/>
  </g>
  
  <!-- Paparazzi cameras -->
  <g transform="translate(150, 320)">
    <!-- Camera flashes -->
    <circle cx="0" cy="0" r="15" fill="#f1c40f" opacity="0.6"/>
    <circle cx="30" cy="5" r="12" fill="#f1c40f" opacity="0.5"/>
    <circle cx="60" cy="-3" r="18" fill="#f1c40f" opacity="0.7"/>
    <circle cx="90" cy="2" r="14" fill="#f1c40f" opacity="0.4"/>
    
    <!-- Photographers -->
    <rect x="-5" y="15" width="10" height="15" fill="#2c3e50"/>
    <circle cx="0" cy="10" r="5" fill="#f4d1ae"/>
    <rect x="-3" y="20" width="6" height="8" fill="#34495e"/>
    
    <rect x="25" y="20" width="10" height="15" fill="#2c3e50"/>
    <circle cx="30" cy="15" r="5" fill="#d4a574"/>
    <rect x="27" y="25" width="6" height="8" fill="#e74c3c"/>
    
    <rect x="55" y="12" width="10" height="15" fill="#2c3e50"/>
    <circle cx="60" cy="7" r="5" fill="#c19a6b"/>
    <rect x="57" y="17" width="6" height="8" fill="#27ae60"/>
  </g>
  
  <!-- Film reels -->
  <g transform="translate(50, 100)">
    <!-- Reel 1 -->
    <circle cx="0" cy="0" r="25" fill="#34495e" stroke="#2c3e50" stroke-width="2"/>
    <circle cx="0" cy="0" r="15" fill="#2c3e50"/>
    <circle cx="0" cy="0" r="5" fill="#95a5a6"/>
    
    <!-- Film strip -->
    <rect x="-30" y="-2" width="60" height="4" fill="#f39c12"/>
    <rect x="-25" y="-1" width="3" height="2" fill="#2c3e50"/>
    <rect x="-15" y="-1" width="3" height="2" fill="#2c3e50"/>
    <rect x="-5" y="-1" width="3" height="2" fill="#2c3e50"/>
    <rect x="5" y="-1" width="3" height="2" fill="#2c3e50"/>
    <rect x="15" y="-1" width="3" height="2" fill="#2c3e50"/>
    <rect x="25" y="-1" width="3" height="2" fill="#2c3e50"/>
    
    <!-- Reel 2 -->
    <circle cx="80" cy="20" r="20" fill="#34495e" stroke="#2c3e50" stroke-width="2"/>
    <circle cx="80" cy="20" r="12" fill="#2c3e50"/>
    <circle cx="80" cy="20" r="4" fill="#95a5a6"/>
  </g>
  
  <!-- Movie screen -->
  <g transform="translate(600, 120)">
    <rect x="0" y="0" width="120" height="80" fill="url(#screenGradient)" stroke="#7f8c8d" stroke-width="3"/>
    
    <!-- Screen content (movie scene) -->
    <rect x="5" y="5" width="110" height="70" fill="#2c3e50"/>
    
    <!-- Movie scene elements -->
    <circle cx="30" cy="30" r="8" fill="#f1c40f"/>
    <rect x="50" y="20" width="40" height="30" fill="#3498db" opacity="0.7"/>
    <polygon points="70,40 80,35 80,45" fill="#e74c3c"/>
    
    <!-- Screen glow -->
    <rect x="0" y="0" width="120" height="80" fill="#3498db" opacity="0.1"/>
  </g>
  
  <!-- Award trophies -->
  <g transform="translate(700, 300)">
    <!-- Trophy 1 -->
    <rect x="0" y="20" width="6" height="15" fill="#8b4513"/>
    <rect x="-3" y="35" width="12" height="4" fill="#8b4513"/>
    <path d="M-5 20 L11 20 L8 10 L-2 10 Z" fill="#ffd700"/>
    <circle cx="3" cy="15" r="3" fill="#ffd700"/>
    
    <!-- Trophy 2 -->
    <rect x="25" y="25" width="6" height="12" fill="#8b4513"/>
    <rect x="22" y="37" width="12" height="4" fill="#8b4513"/>
    <path d="M20 25 L36 25 L33 15 L23 15 Z" fill="#c0c0c0"/>
    <circle cx="28" cy="20" r="3" fill="#c0c0c0"/>
    
    <!-- Trophy 3 -->
    <rect x="50" y="27" width="6" height="10" fill="#8b4513"/>
    <rect x="47" y="37" width="12" height="4" fill="#8b4513"/>
    <path d="M45 27 L61 27 L58 17 L48 17 Z" fill="#cd7f32"/>
    <circle cx="53" cy="22" r="3" fill="#cd7f32"/>
  </g>
  
  <!-- Spotlights -->
  <g opacity="0.6">
    <circle cx="200" cy="100" r="80" fill="url(#spotlightGradient)"/>
    <circle cx="400" cy="80" r="100" fill="url(#spotlightGradient)"/>
    <circle cx="600" cy="90" r="90" fill="url(#spotlightGradient)"/>
  </g>
  
  <!-- Film strip border -->
  <g opacity="0.3">
    <rect x="0" y="0" width="800" height="20" fill="#2c3e50"/>
    <rect x="0" y="380" width="800" height="20" fill="#2c3e50"/>
    
    <!-- Perforations -->
    <rect x="10" y="5" width="8" height="10" fill="#34495e"/>
    <rect x="30" y="5" width="8" height="10" fill="#34495e"/>
    <rect x="50" y="5" width="8" height="10" fill="#34495e"/>
    <rect x="70" y="5" width="8" height="10" fill="#34495e"/>
    <rect x="90" y="5" width="8" height="10" fill="#34495e"/>
    
    <rect x="10" y="385" width="8" height="10" fill="#34495e"/>
    <rect x="30" y="385" width="8" height="10" fill="#34495e"/>
    <rect x="50" y="385" width="8" height="10" fill="#34495e"/>
    <rect x="70" y="385" width="8" height="10" fill="#34495e"/>
    <rect x="90" y="385" width="8" height="10" fill="#34495e"/>
  </g>
  
  <!-- Title -->
  <text x="400" y="40" text-anchor="middle" fill="#f1c40f" font-family="Arial, sans-serif" font-size="24" font-weight="bold" opacity="0.9">
    International Film Festival
  </text>
</svg>